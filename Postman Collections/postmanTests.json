	"item": [
		{
			"name": "Get all products",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "ebdbee53-72e8-407c-963d-4dd5cc2e8175",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type is present\", function () {\r",
							"    pm.response.to.have.header(\"Content-Type\");\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type header is application/json\", function () {\r",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).includes(\"application/json\");\r",
							"})\r",
							"\r",
							"const response = pm.response.json();\r",
							"var productsSchema = {\r",
							"    \"type\": \"array\",\r",
							"    \"items\": [{\r",
							"        \"type\": \"object\",\r",
							"        \"properties\": {\r",
							"            \"id\": {\r",
							"                \"type\": \"number\"\r",
							"            },\r",
							"            \"title\": {\r",
							"                \"type\": \"string\"\r",
							"            },\r",
							"            \"price\": {\r",
							"                \"type\": \"number\"\r",
							"            },\r",
							"            \"description\": {\r",
							"                \"type\": \"string\"\r",
							"            },\r",
							"            \"category\": {\r",
							"                \"type\": \"string\"\r",
							"            },\r",
							"            \"image\": {\r",
							"                \"type\": \"string\"\r",
							"            },\r",
							"            \"rating\": {\r",
							"                \"type\": \"object\",\r",
							"                \"properties\": {\r",
							"                    \"rate\": {\r",
							"                        \"type\": \"number\"\r",
							"                    },\r",
							"                    \"count\": {\r",
							"                        \"type\": \"number\"\r",
							"                    }\r",
							"                },\r",
							"                \"required\": [\"rate\", \"count\"]\r",
							"            }\r",
							"        },\r",
							"        \"required\": [\"id\", \"title\", \"price\", \"description\", \"category\",\r",
							"                    \"image\", \"rating\"]\r",
							"\r",
							"    }]\r",
							"};\r",
							"\r",
							"pm.test('Schema is valid', function () {\r",
							"    pm.response.to.have.jsonSchema(productsSchema);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
